<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/album_dp_200"
    android:background="@color/colorPrimaryDark"
    android:layout_marginBottom="@dimen/dim_10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/clint_my_order_fragment_civ_photo"
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_100dp"
        android:layout_marginStart="@dimen/dim_10dp"
        android:layout_marginTop="@dimen/dim_30dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/clint_my_order_fragment_civ_photo"
        android:layout_marginTop="@dimen/dim_30dp"
        android:layout_marginStart="@dimen/dim_20dp">
        <TextView
            android:id="@+id/clint_my_order_fragment_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dim_20sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color"
                android:text="@string/orderNum"/>
            <TextView
                android:id="@+id/clint_my_order_fragment_tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color"
                android:text="@string/total"/>
            <TextView
                android:id="@+id/clint_my_order_fragment_tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color"
                android:text="@string/aderss"/>
            <TextView
                android:id="@+id/clint_my_order_fragment_tv_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/clint_my_order_fragment_btn_butten"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_40"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dim_10dp"
        android:layout_marginStart="@dimen/dim_10dp"
        android:layout_marginEnd="@dimen/dim_10dp"/>
</RelativeLayout>