<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dim_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_200"
        android:layout_marginStart="@dimen/dim_65dp"
        android:background="@drawable/linear_client_offers_shap">
        <TextView
            android:id="@+id/client_offers_fragment_tv_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/album_dp_40"
            style="@style/tv_more_style"/>
        <Button
            android:id="@+id/client_offers_fragment_btn_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btn1_style"
            android:layout_below="@id/client_offers_fragment_tv_offer"
            android:layout_marginTop="@dimen/dim_50dp"
            android:text="@string/details"/>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/client_offers_fragment_civ_photo"
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="@dimen/dim_120dp"
        android:background="@drawable/circl_cluent_offer_shape"
        android:layout_centerVertical="true"/>
</RelativeLayout>