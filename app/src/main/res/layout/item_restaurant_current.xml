<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/album_dp_200"
    android:background="@color/colorPrimaryDark"
    android:layout_marginBottom="@dimen/dim_10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/restaurant_current_fragment_civ__photo"
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_100dp"
        android:layout_marginStart="@dimen/dim_10dp"
        android:layout_marginTop="@dimen/dim_30dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/restaurant_current_fragment_civ__photo"
        android:layout_marginTop="@dimen/dim_30dp"
        android:layout_marginStart="@dimen/dim_20dp">
        <TextView
            android:id="@+id/restaurant_current_fragment_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dim_20sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color"
                android:text="@string/orderNum"/>
            <TextView
                android:id="@+id/restaurant_current_fragment_tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color"
                android:text="@string/total"/>
            <TextView
                android:id="@+id/restaurant_current_fragment_tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color"
                android:text="@string/aderss"/>
            <TextView
                android:id="@+id/restaurant_current_fragment_tv_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_strart_color" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dim_10dp"
        android:layout_marginBottom="@dimen/dim_10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/restaurant_current_fragment_btn_confirm"
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/album_dp_40"
            android:text="@string/confirm2"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_20sp"
            android:padding="@dimen/dim_5dp"
            android:textStyle="bold"
            android:background="@drawable/btn3_shape"
            android:layout_marginEnd="@dimen/dim_10dp"/>
        <Button
            android:id="@+id/restaurant_current_fragment_btn_cancel"
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/album_dp_40"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_20sp"
            android:textStyle="bold"
            android:background="@drawable/btn2_shape" />
    </LinearLayout>

</RelativeLayout>