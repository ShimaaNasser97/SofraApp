<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/restaurant_pending_details_fragment_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_more_text_style"
        android:text="@string/orderDetails"/>

    <RelativeLayout
        android:id="@+id/restaurant_pending_details_fragment_rv_relative"
        android:layout_below="@id/restaurant_pending_details_fragment_tv_text"
        android:layout_marginTop="@dimen/dim_10dp"
        android:background="@drawable/linear_client_offers_shap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/restaurant_pending_details_fragment_civ_photo"
            android:layout_width="@dimen/dim_70dp"
            android:layout_height="@dimen/dim_70dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim_30dp"/>

        <TextView
            android:id="@+id/restaurant_pending_details_fragment_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/restaurant_pending_details_fragment_civ_photo"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_marginStart="@dimen/dim_20dp"
            style="@style/tv_more_style"
            android:text="jfgluhflufo"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/restaurant_pending_details_fragment_tv_name"
            android:layout_toEndOf="@id/restaurant_pending_details_fragment_civ_photo"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_marginStart="@dimen/dim_20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day"
                android:textSize="@dimen/dim_20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/restaurant_pending_details_fragment_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dim_20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:text="jfgluhflufo"/>
        </LinearLayout>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/restaurant_pending_details_fragment_rv_relative1"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_below="@id/restaurant_pending_details_fragment_rv_relative"
            android:background="@drawable/linear_client_offers_shap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_50dp">

            <TextView
                android:id="@+id/restaurant_pending_details_fragment_tv_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dim_10dp"
                android:paddingEnd="@dimen/dim_10dp"
                android:text="@string/adress2"
                android:textSize="@dimen/dim_20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/restaurant_pending_details_fragment_tv_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/restaurant_pending_details_fragment_tv_text2"
                android:textSize="@dimen/dim_20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
        </RelativeLayout>

   <RelativeLayout
       android:id="@+id/restaurant_pending_details_fragment_rv_relative3"
       android:layout_below="@id/restaurant_pending_details_fragment_rv_relative2"
       android:layout_width="match_parent"
       android:layout_height="@dimen/album_dp_200"
       android:background="@drawable/linear_client_offers_shap"
       android:layout_marginTop="@dimen/dim_10dp">

       <LinearLayout
           android:id="@+id/restaurant_pending_details_fragment_ll_linear1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginStart="@dimen/dim_30dp"
           android:layout_marginTop="@dimen/dim_20dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/orderPrice"
               android:textSize="@dimen/dim_20sp"
               android:textColor="@color/colorAccent"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/restaurant_pending_details_fragment_tv_price"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/dim_20sp"
               android:layout_marginStart="@dimen/dim_120dp"
               android:textColor="@color/colorAccent"
               android:textStyle="bold"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/restaurant_pending_details_fragment_ll_linear2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/restaurant_pending_details_fragment_ll_linear1"
           android:orientation="horizontal"
           android:layout_marginStart="@dimen/dim_30dp"
           android:layout_marginTop="@dimen/dim_10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/tips"
               android:textSize="@dimen/dim_20sp"
               android:textColor="@color/colorAccent"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/restaurant_pending_details_fragment_tv_cost"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/dim_20sp"
               android:layout_marginStart="@dimen/dim_120dp"
               android:textColor="@color/colorAccent"
               android:textStyle="bold"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/restaurant_pending_details_fragment_ll_linear3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/restaurant_pending_details_fragment_ll_linear2"
           android:orientation="horizontal"
           android:layout_marginStart="@dimen/dim_30dp"
           android:layout_marginTop="@dimen/dim_10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/total2"
               android:textSize="@dimen/dim_20sp"
               android:textColor="@color/colorAccent"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/restaurant_pending_details_fragment_tv_total"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/dim_20sp"
               android:layout_marginStart="@dimen/dim_120dp"
               android:textColor="@color/colorAccent"
               android:textStyle="bold"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/restaurant_pending_details_fragment_ll_linear4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/restaurant_pending_details_fragment_ll_linear3"
           android:orientation="horizontal"
           android:layout_marginStart="@dimen/dim_30dp"
           android:layout_marginTop="@dimen/dim_10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/bayment"
               android:textSize="@dimen/dim_20sp"
               android:textColor="@color/colorAccent"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/restaurant_pending_details_fragment_tv_payment"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/dim_20sp"
               android:layout_marginStart="@dimen/dim_120dp"
               android:textColor="@color/colorAccent"
               android:textStyle="bold"/>
       </LinearLayout>

   </RelativeLayout>
    <RelativeLayout
        android:id="@+id/restaurant_pending_details_fragment_rv_relative2"
        android:layout_below="@id/restaurant_pending_details_fragment_rv_relative1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_200"
        android:background="@drawable/linear_client_offers_shap"
        android:layout_marginTop="@dimen/dim_10dp">
        <TextView
            android:id="@+id/restaurant_pending_details_fragment_tv_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orderDetails"
            android:layout_marginStart="@dimen/dim_30dp"
            style="@style/tv_more_style"/>
        <LinearLayout
            android:id="@+id/restaurant_pending_details_fragment_ll_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dim_30dp"
            android:layout_below="@id/restaurant_pending_details_fragment_tv_text3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="لملبمم"
                android:textSize="@dimen/dim_20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="لملبمم"
                android:textSize="@dimen/dim_20sp"
                android:layout_marginStart="@dimen/dim_120dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/restaurant_pending_details_fragment_rv_relative3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10dp"
        android:layout_marginStart="@dimen/dim_10dp"
        android:layout_marginBottom="@dimen/dim_10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/restaurant_pending_details_fragment_btn_call"
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/album_dp_40"
            android:text="@string/call"
            android:drawableStart="@drawable/ic_phone"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_20sp"
            android:textStyle="bold"
            android:background="@drawable/btn_daialog_shape"
            android:layout_marginEnd="@dimen/dim_10dp"/>
        <Button
            android:id="@+id/restaurant_pending_details_fragment_btn_confirm"
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/album_dp_40"
            android:text="@string/accept"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_20sp"
            android:textStyle="bold"
            android:background="@drawable/btn3_shape"
            android:layout_marginEnd="@dimen/dim_10dp"/>
        <Button
            android:id="@+id/restaurant_pending_details_fragment_btn_cancel"
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/album_dp_40"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_20sp"
            android:textStyle="bold"
            android:background="@drawable/btn2_shape" />
    </LinearLayout>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>