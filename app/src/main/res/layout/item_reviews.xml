<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_100dp"
    android:background="@drawable/linear_shap"
    android:layout_marginTop="@dimen/dim_10dp">

<TextView
    android:id="@+id/comment_fragmet_tx_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dim_10dp"
    android:layout_marginTop="@dimen/dim_10dp" />

    <RelativeLayout
        android:layout_below="@id/comment_fragmet_tx_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dim_10dp"
        android:layout_marginStart="@dimen/dim_10dp"
        android:layout_marginEnd="@dimen/dim_10dp">
        <TextView
            android:id="@+id/comment_fragment_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dim_20sp"/>
        <ImageView
            android:id="@+id/comment_fragment_iv_photo"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>