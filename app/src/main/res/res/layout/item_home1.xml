<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dim_4dp"
    android:layout_marginEnd="@dimen/dim_4dp"
    android:background="@null"
    app:dragEdge="left"
    app:mode="same_level">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_100dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/item_home1_btn_edit"
            android:layout_width="@dimen/album_dp_40"
            android:layout_height="@dimen/album_dp_40"
            android:background="@drawable/ic_edit"/>
        <Button
            android:id="@+id/item_home1_btn_delete"
            android:layout_width="@dimen/album_dp_40"
            android:layout_height="@dimen/album_dp_40"
            android:background="@drawable/ic_delete"/>
    </LinearLayout>
<RelativeLayout
    android:id="@+id/item_home1_rv_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dim_10dp"
    android:layout_marginEnd="@dimen/dim_10dp"
    android:background="@drawable/linear_shap">
    <ImageView
        android:id="@+id/item_home1_iv_image"
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/album_dp_80"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:background="@drawable/image_shape" />

    <TextView
        android:id="@+id/item_home1_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dim_30dp"
        android:layout_toEndOf="@id/item_home1_iv_image"
        android:textColor="@color/font_color"
        android:textSize="@dimen/dim_20sp" />
</RelativeLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>