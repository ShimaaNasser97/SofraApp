<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/clint_chang_password_fragment_et_old_pqss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50dp"
        android:background="@drawable/et2_shap"
        android:hint="@string/old_pass"
        style="@style/et3_shape"
        android:layout_marginTop="@dimen/dim_50dp"/>
    <EditText
        android:id="@+id/clint_chang_password_fragment_et_new_pqss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50dp"
        android:background="@drawable/et2_shap"
        style="@style/et3_shape"
        android:hint="@string/new_pass"
        android:layout_below="@id/clint_chang_password_fragment_et_old_pqss"/>
    <EditText
        android:id="@+id/clint_chang_password_fragment_et_confirm_pqss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50dp"
        android:background="@drawable/et2_shap"
        style="@style/et3_shape"
        android:hint="@string/confirm_pass"
        android:layout_below="@id/clint_chang_password_fragment_et_new_pqss"/>
    <Button
       android:id="@+id/chang_password_fragment_btn_chang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/btn1_style"
        android:layout_below="@id/clint_chang_password_fragment_et_confirm_pqss"
        android:hint="@string/cahng"/>
</RelativeLayout>