<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <TextView
        android:id="@+id/forget_password_fragment_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="من فضلك قم بادخال بريدك الالكترونى"
        style="@style/text1_style"/>

    <EditText
        android:id="@+id/forget_password_fragment_tv_email"
        android:layout_below="@id/forget_password_fragment_tv_text"
        android:layout_marginTop="@dimen/dim_70dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50dp"
        android:hint="@string/email"
        style="@style/et2_style" />

    <Button
        android:id="@+id/forget_password_fragment_btn_send"
        android:layout_below="@id/forget_password_fragment_tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/btn1_style"
        android:text="ارسال"/>


</RelativeLayout>