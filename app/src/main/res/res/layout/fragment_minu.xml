<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/minu_fragment_rv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_10dp"
        android:layout_marginEnd="@dimen/dim_10dp"
        android:orientation="horizontal">

    </android.support.v7.widget.RecyclerView>
<android.support.v7.widget.RecyclerView
    android:id="@+id/minu_fragment_rv_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/minu_fragment_rv_category"
    android:layout_marginTop="@dimen/dim_10dp"
    android:layout_marginStart="@dimen/dim_10dp"
    android:layout_marginEnd="@dimen/dim_10dp">

</android.support.v7.widget.RecyclerView>
</RelativeLayout>