<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/restaurant_offers_fragment_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_more_style"
        android:text="@string/newOffrers"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/restaurant_offers_fragment_rv_offers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/restaurant_offers_fragment_tv_text"
        style="@style/recycle_style">
    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/restaurant_offers_fragment_btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/btn1_style"
        android:layout_alignParentBottom="true"
        android:text="اضف عرض جديد"
        android:layout_marginBottom="@dimen/album_dp_40"/>
</RelativeLayout>