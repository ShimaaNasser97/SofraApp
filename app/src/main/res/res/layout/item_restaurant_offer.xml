<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dim_4dp"
    android:layout_marginEnd="@dimen/dim_4dp"
    android:background="@null"
    app:dragEdge="left"
    app:mode="same_level">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_100dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/restaurant_offers_fragment_btn_edit"
            android:layout_width="@dimen/album_dp_40"
            android:layout_height="@dimen/album_dp_40"
            android:background="@drawable/ic_edit"/>
        <Button
            android:id="@+id/restaurant_offers_fragment_btn_delete"
            android:layout_width="@dimen/album_dp_40"
            android:layout_height="@dimen/album_dp_40"
            android:background="@drawable/ic_delete"/>
    </LinearLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_200"
        android:layout_marginStart="@dimen/dim_65dp"
        android:background="@drawable/linear_client_offers_shap">
        <TextView
            android:id="@+id/restaurant_offers_fragment_tv_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/album_dp_40"
            style="@style/tv_more_style"/>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/restaurant_offers_fragment_civ_photo"
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="@dimen/dim_120dp"
        android:background="@drawable/circl_cluent_offer_shape"
        android:layout_centerVertical="true"/>
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>