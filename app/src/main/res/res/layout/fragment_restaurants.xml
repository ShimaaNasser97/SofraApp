<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="@dimen/dim_50dp"
            android:orientation="horizontal"
            android:background="@drawable/linear_shap">

            <EditText
                android:id="@+id/restaurants_fragment_et_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:background="@null"/>
            <ImageView
                android:id="@+id/restaurants_fragment_iv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="@dimen/dim_50dp"
            android:orientation="horizontal"
            android:background="@drawable/linear_shap"
            android:layout_marginEnd="@dimen/dim_20dp">

            <Spinner
                android:id="@+id/restaurants_fragment_sp_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/restaurants_fragment_rv_restaurants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dim_30dp">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>