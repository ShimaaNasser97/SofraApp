<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_10dp"
    android:layout_marginBottom="@dimen/dim_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="@dimen/dim_30dp"
        android:background="@drawable/linear_shap">

        <LinearLayout
            android:layout_width="@dimen/dim_150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/album_dp_80"
            android:layout_marginTop="@dimen/dim_20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurants_fragment_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/album_sp_20" />

            <RatingBar
                android:id="@+id/restaurants_fragment_rb_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:isIndicator="true"
                android:layout_marginBottom="2dp"
                android:numStars="5"
                android:stepSize="0.1"
                />

            <TextView
                android:id="@+id/restaurants_fragment_tv_minimum_charger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/restaurants_fragment_tv_delivery_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_10dp"
            android:layout_marginTop="@dimen/dim_20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/restaurants_fragment_tv_circil"
                android:layout_width="@dimen/dim_20dp"
                android:layout_height="@dimen/dim_20dp"
                android:background="@drawable/rest_circil_shape" />

            <TextView
                android:id="@+id/restaurants_fragment_tv_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp" />
        </LinearLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/restaurants_fragment_civ_photo"
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="@dimen/dim_120dp"
        android:layout_centerVertical="true"
        android:background="@drawable/circil_shape" />


</RelativeLayout>